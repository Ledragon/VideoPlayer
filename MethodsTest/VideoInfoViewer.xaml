<UserControl x:Class="MethodsTest.VideoInfoViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Label Content="Title:" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox  VerticalAlignment="Top" HorizontalAlignment="Left" Width="180" Margin="100,0,0,0" AllowDrop="False" IsEnabled="False" Text="{Binding Path=Title}"/>
        <Label Content="Duration:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,20,0,0"/>
        <TextBox  VerticalAlignment="Top" HorizontalAlignment="Left" Width="180" Margin="100,20,0,0" AllowDrop="False" IsEnabled="False" Text="{Binding Path=LengthString}"/>
        <Label Content="Rating:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,40,0,0"/>
        <TextBox  VerticalAlignment="Top" HorizontalAlignment="Left" Width="180" Margin="100,40,0,0" AllowDrop="False" IsEnabled="False" Text="{Binding Path=Rating}"/>
        <Label Content="Tags:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,60,0,0"/>
    </Grid>
</UserControl>
