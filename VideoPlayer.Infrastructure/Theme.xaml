<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="LightGray">#494949</Color>
    <Color x:Key="DarkRed">#851513</Color>
    <SolidColorBrush x:Key="LightGraySolidBrush" Color="{StaticResource LightGray}" />
    <SolidColorBrush x:Key="VideoMenusSolidBrush" Color="{StaticResource LightGray}" Opacity="0.75" />
    <FontFamily x:Key="DefaultFont">Lao UI</FontFamily>
    <Style TargetType="TextBlock" x:Key="TrimmedTextBlock">
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="TextWrapping" Value="NoWrap"></Setter>
        <Setter Property="TextTrimming" Value="WordEllipsis"></Setter>
        <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"></Setter>
    </Style>

</ResourceDictionary>