<Window x:Class="VideoPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="768" Width="1024" WindowState="Maximized" Background="Black" Foreground="White" FontFamily="Verdana" WindowStyle="None">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="FilesList" Grid.Column="0" Background="Black" Foreground="White">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=(FileName)}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBox Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Name="_uiDirectoryTextBox"/>
        <Button Grid.Column="1" Name="LoadButton" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,0,0,0" Content="Load" Click="LoadButton_Click"/>
        <Button Grid.Column="1" Name="CloseButton" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,0" Content="Close" Click="CloseButton_Click"/>

    </Grid>
</Window>
